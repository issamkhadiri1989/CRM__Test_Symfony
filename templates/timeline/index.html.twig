{% extends 'layout.html.twig' %}

{% block title %}History{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="timeline">
                        {% for day,events in  history %}
                            <div class="time-label">
                                <span class="bg-red">{{ day }}</span>
                            </div>
                            {% for event in events %}
                                <div>
                                    <div class="timeline-item">
                                        <span class="time"><i class="fas fa-clock"></i> {{ event.time }}</span>
                                        <h3 class="timeline-header"><span class="text-bold text-primary">{{ event.type.value }}</span></h3>
                                        <div class="timeline-body">
                                            {{ event.message }}
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block page_header %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Timeline</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">History</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
{% endblock page_header %}