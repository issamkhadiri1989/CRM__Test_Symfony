{% extends 'page.html.twig' %}
{% block body %}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    {{ form_start(change_password) }}
                    <div class="card">
                        <div class="card-body">
                            {{ form_row(change_password) }}
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Set password</button>
                        </div>
                    </div>
                    {{ form_end(change_password) }}
                </div>
            </div>
        </div>
    </section>
{% endblock body %}

