{% extends 'layout.html.twig' %}

{% block title %}Invite new employee{% endblock %}

{% block content %}
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Invite new Employee</h3>
                        </div>
                        {{ form_start(invitation) }}
                        <div class="card-body">
                            <div class="form-group">
                                {{ form_row(invitation.employee.email, {
                                    attr: {
                                        class: 'form-control'
                                    }
                                })}}
                            </div>
                            <div class="form-group">
                                {{ form_row(invitation.employee.fullName, {
                                    attr: {
                                        class: 'form-control'
                                    }
                                })}}
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        {{ form_end(invitation) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock content %}
{% block page_header %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Invite new employee to {{ company.name}}</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Send a new Invitation</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
{% endblock page_header %}
